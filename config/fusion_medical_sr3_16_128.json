        "val": {
            "name": "Medical_Dataset",
            "mode": "LRHR",
            "dataroot": "/home/xys/MICCAI2024/VIS-IR-Super-Resolution-via-Iterative-Refinement/dataset/Medical_Dataset_128",
            "datatype": "Fusion", //lmdb or img, path of img files
            "l_resolution": 16,
            "r_resolution": 128,
            "data_len": -1 // data length in validation 
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 12,
            "out_channel": 3,
            "inner_channel": 64,
            "channel_multiplier": [
